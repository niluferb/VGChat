@using Microsoft.AspNetCore.Identity
@using VGChat.Areas.Identity.Data

@inject SignInManager<VGChatUser> SignInManager
@inject UserManager<VGChatUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    {
        VGChatUser user = await UserManager.GetUserAsync(this.User);
        String firstName = user.FirstName;
        <ul class="navbar-nav">

            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" title="Manage">
                    <span style="float: left; font-size: 18px;">Merhaba @firstName!</span>
                </a>
            </li>
        </ul>

        <style>
            .dropdown-menu.right {
                left: auto;
                right: 0;
            }
        </style>

        <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <button type="button" class="btn btn-info">
                    Seçenekler
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filter" viewBox="0 0 16 16">
                        <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z" />
                    </svg>
                </button>
                <div class="btn-group" role="group">
                <button id="btnGroupDrop3" type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                <div class="dropdown-menu right" aria-labelledby="btnGroupDrop3">

                    <a class="dropdown-item" href="#">
                            <form id="manage" class="form-inline" asp-area="Identity" asp-page="/Account/Manage/Index" )">
                                <button id="manage" type="submit" class="nav-link btn btn-link text-dark">Hesabım</button>
                            </form>
                    </a>
                    <a class="dropdown-item" href="#">
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">
                                Çıkış Yap
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                                    <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                                </svg>
                            </button>
                        </form>
                    </a>
                </div>
            </div>
        </div>
    }
}
</ul>
