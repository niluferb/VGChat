@using Microsoft.AspNetCore.Identity
@using VGChat.Areas.Identity.Data

@inject SignInManager<VGChatUser> SignInManager
@inject UserManager<VGChatUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    VGChatUser user = await UserManager.GetUserAsync(this.User);
    String firstName = user.FirstName;
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba @firstName!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
</ul>
